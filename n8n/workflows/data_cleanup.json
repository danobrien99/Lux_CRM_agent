    {
      "parameters": {
        "jsCode": "return items.filter((item) => Boolean(item.json?.error)).map((item) => ({ json: { workflow: 'data_cleanup', failed_at: new Date().toISOString(), endpoint: 'http://api:8000/v1/admin/cleanup', error: item.json.error, response_payload: item.json } }));"
      },
